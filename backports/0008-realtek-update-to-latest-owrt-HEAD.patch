+-static int edsa_tag_flow_dissect(const struct sk_buff *skb, __be16 *proto,
+-				 int *offset)
+-{
+-	*offset = 8;
+-	*proto = ((__be16 *)skb->data)[3];
+-	return 0;
+-}
