+		m_bit = (phy_if == PHY_INTERFACE_MODE_10GKR) ? 3 : 1;
+		l_bit = (phy_if == PHY_INTERFACE_MODE_10GKR) ? 2 : 0;
+
+		rtl9300_sds_field_w(lane_0, 0x21, 11, m_bit, l_bit, 0x2);
