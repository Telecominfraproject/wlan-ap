+	struct ieee80211_eht_operation *eht_oper;
+	u32 eht_oper_params = 0;
+	u8 ie_len = 1 + sizeof(struct ieee80211_eht_operation);
+	u8 chwidth = 0;
+
+	*pos++ = WLAN_EID_EXTENSION;
+	*pos++ = ie_len;
