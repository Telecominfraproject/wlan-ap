+	(NL80211_NUM_POWER_MODES_PER_IFTYPE * (1 + pwr_mode_usr) + pwr_mode_bcn)
+
 enum nl80211_regulatory_power_modes {
 	NL80211_REG_AP_LPI,
 	NL80211_REG_AP_SP,
