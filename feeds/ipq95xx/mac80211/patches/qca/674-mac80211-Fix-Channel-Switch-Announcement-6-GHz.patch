+/* Determine primary channel index */
+#define PRIMARY_CENTER_CHAN_IDX(chan, ccfs_idx, bw)	\
+		((chan > ccfs_idx) ? ccfs_idx + (bw/20) : ccfs_idx - (bw/20))
+
