@@ -1769,15 +1774,15 @@ uc_nl_convert_attr(const uc_nl_attr_spec
 	case DT_BOOL:
 		if (spec->attr == 0)
 			t.u8 = uc_nl_get_struct_member_u8(base, spec->auxdata);
