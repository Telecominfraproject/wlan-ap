-	ie = nla_data(tb[spec->attr]);
+	len = nla_len(attr);
+	ie = nla_data(attr);
 
 	if (len < 2)
 		return NULL;
@@ -1734,7 +1739,7 @@ uc_nl_convert_numval(const uc_nl_attr_sp
 }
 
