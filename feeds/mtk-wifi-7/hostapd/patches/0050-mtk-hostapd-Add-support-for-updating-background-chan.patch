+		hapd = switch_link_hapd(hapd, data->dfs_event.link_id);
+		hostapd_event_dfs_background_chan_update(hapd, &data->dfs_event, false);
+		break;
+	case EVENT_DFS_BACKGROUND_CHAN_EXPAND:
