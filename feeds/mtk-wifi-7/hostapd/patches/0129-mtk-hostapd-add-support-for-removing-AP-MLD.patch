 				     char *buf)
 {
@@ -7491,6 +7502,9 @@ static void hostapd_global_ctrl_iface_receive(int sock, void *eloop_ctx,
 	} else if (os_strncmp(buf, "REMOVE_BSS ", 11) == 0) {
 		if (hostapd_ctrl_bss_remove(interfaces, buf + 11) < 0)
