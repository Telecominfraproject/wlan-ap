+#ifdef CONFIG_IEEE80211BE
+	if (!id_search.sm && hostapd_is_mld_ap(hapd)) {
+		struct hostapd_data *h;
+
+		for_each_mld_link(h, hapd) {
+			if (h == hapd)
+				continue;
+
+			ap_for_each_sta(h,
