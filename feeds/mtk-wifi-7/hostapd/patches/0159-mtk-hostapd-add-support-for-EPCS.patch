+		return;
+	}
+
+	if (mld->epcs.enabled) {
+		wpa_printf(MSG_ERROR, MACSTR ": EPCS already enabled", MAC2STR(addr));
+		return;
+	}
+
+	mld->epcs.enabled = true;
+	if (hostapd_drv_set_epcs(hapd, entry, mld)) {
