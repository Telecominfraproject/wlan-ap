+		wpa_printf(MSG_ERROR, MACSTR ": not support EPCS", MAC2STR(addr));
+		status = WLAN_STATUS_EPCS_DENIED;
+		goto send;
+	}
+
+	mld = &sta->mld_info;
+	if (mld->epcs.enabled) {
+		wpa_printf(MSG_ERROR, MACSTR ": EPCS already enabled", MAC2STR(addr));
+		goto send;
+	}
