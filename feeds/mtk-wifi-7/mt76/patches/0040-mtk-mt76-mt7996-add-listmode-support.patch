+		return dev->test_ops->set_list_mode(phy, 0, list_act);
+
+	if (!tb[MT76_TM_ATTR_LM_SEG_IDX] ||
+	    mt76_tm_get_u8(tb[MT76_TM_ATTR_LM_SEG_IDX], &seg_idx, 0, LIST_SEG_MAX_NUM) ||
