+		[MT76_TM_TX_MODE_OFDM] = "ofdm",
+		[MT76_TM_TX_MODE_HT] = "ht",
+		[MT76_TM_TX_MODE_VHT] = "vht",
+		[MT76_TM_TX_MODE_HE_SU] = "he_su",
