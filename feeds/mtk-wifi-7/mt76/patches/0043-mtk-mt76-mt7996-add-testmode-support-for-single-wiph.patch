+				     radio, radio_policy) ||
+		    !tb[NL80211_WIPHY_RADIO_ATTR_INDEX])
+			continue;
+
+		radio_idx = nla_get_u32(tb[NL80211_WIPHY_RADIO_ATTR_INDEX]);
+		parse_radio_config(&wiphy->radio[radio_idx], radio);
+		wiphy->radio_num++;
+	}
