From 4da8a09a02b35f0d69ef107eb39f588888e877d3 Mon Sep 17 00:00:00 2001
From: Peter Chiu <chui-hao.chiu@mediatek.com>
Date: Thu, 12 Dec 2024 10:14:12 +0800
Subject: [PATCH 044/119] mtk: mt76: fix rcu protection for mlink and mconf

1. Use kree_rcu to protect mlink and mconf
2. Do rcu_dereference with def_wcid to protect the sta_info

Signed-off-by: Peter Chiu <chui-hao.chiu@mediatek.com>
---
 mac80211.c | 2 ++
 mt76.h     | 7 +++----
 2 files changed, 5 insertions(+), 4 deletions(-)

diff --git a/mac80211.c b/mac80211.c
index 76ebb6ea..f1edf127 100644
--- a/mac80211.c
+++ b/mac80211.c
@@ -1737,6 +1737,8 @@ void mt76_wcid_cleanup(struct mt76_dev *dev, struct mt76_wcid *wcid)
 		hw = mt76_tx_status_get_hw(dev, skb);
 		ieee80211_free_txskb(hw, skb);
 	}
+
+	rcu_assign_pointer(wcid->def_wcid, NULL);
 }
 EXPORT_SYMBOL_GPL(mt76_wcid_cleanup);
 
diff --git a/mt76.h b/mt76.h
index 27d52cba..250de7dd 100644
--- a/mt76.h
+++ b/mt76.h
@@ -464,7 +464,7 @@ struct mt76_wcid {
 
 	struct list_head poll_list;
 
-	struct mt76_wcid *def_wcid;
+	struct mt76_wcid __rcu *def_wcid;
 };
 
 struct mt76_txq {
@@ -1604,10 +1604,9 @@ wcid_to_sta(struct mt76_wcid *wcid)
 	if (!wcid || !wcid->sta)
 		return NULL;
 
-	if (wcid->def_wcid)
-		ptr = wcid->def_wcid;
+	ptr = rcu_dereference(wcid->def_wcid);
 
-	return container_of(ptr, struct ieee80211_sta, drv_priv);
+	return ptr ? container_of(ptr, struct ieee80211_sta, drv_priv) : NULL;
 }
 
 static inline struct mt76_tx_cb *mt76_tx_skb_cb(struct sk_buff *skb)
