+    message DhcpOfferEvent {
+        optional DhcpCommonData         dhcp_common_data                    = 1;
+        optional bool                   from_internal                       = 2;
+    }
+
+    /* DHCP Inform Event */
+    message DhcpInformEvent {
+        optional DhcpCommonData         dhcp_common_data                    = 1;
+    }
+
