if [ -z "$1" ] || [ ! -f "$1" ] ; then
  echo
  echo "Usage $0: Require firmware tarfile"
  exit 1
fi

TARFILE=$1
TMPDIR=/tmp/tmpdir
UPGFILE="upgrade.tar"

if tar tf $TARFILE 2> /dev/null 1>&2; then
  TARCMD="/bin/tar -xf"
  TARTOC="/bin/tar -tf"
else
  TARCMD="/bin/tar -xzf"
  TARTOC="/bin/tar -tzf"
fi

# Extract tar.gz
cd /tmp
mkdir -p $TMPDIR
IMGFILE=$($TARTOC $TARFILE | grep sysupgrade.bin)
echo Image file is $IMGFILE
$TARCMD $TARFILE -C $TMPDIR $IMGFILE

if [ "$?" != "0" ] ; then
  rm $TARFILE
  rm -fr $TMPDIR
  exit 1
fi

$TARCMD $TARFILE -C $TMPDIR ./sha256sums
if [ "$?" != "0" ] ; then
  rm $TARFILE
  rm -fr $TMPDIR
  exit 1
fi
rm $TARFILE

cd $TMPDIR
if [ ! -f "$IMGFILE" ] && [ ! -f "sha256sums" ] ; then
  echo "$0: Image or checksum file does not exist"
  cd /tmp
  rm -fr $TMPDIR
  exit 1
fi

# Validate checksum
cat sha256sums | grep sysupgrade.bin>reqd_sum
sha256sum -c reqd_sum 2>/dev/null|grep OK
if [ "$?" != "0" ] ; then
  echo "$0: Validation failed."
  cd /tmp
  rm -fr $TMPDIR
  exit 1
fi

# Create upgrade.tar
cp $IMGFILE /tmp/openwrt-sysupgrade.bin
cd /tmp
rm -fr $TMPDIR
exit 0
