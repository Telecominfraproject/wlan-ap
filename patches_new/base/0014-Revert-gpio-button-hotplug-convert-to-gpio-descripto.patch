+		if (error) {
+			dev_err(dev,
+				"unable to set direction on gpio %u, err=%d\n",
+				gpio, error);
+			return error;
 		}
 
-		bdata->can_sleep = gpiod_cansleep(bdata->gpiod);
+		bdata->can_sleep = gpio_cansleep(gpio);
