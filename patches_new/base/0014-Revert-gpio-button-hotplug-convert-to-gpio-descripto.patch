@@ -574,11 +584,8 @@ static int gpio_keys_button_probe(struct platform_device *pdev,
 	platform_set_drvdata(pdev, bdev);
 
 	*_bdev = bdev;
-	error = 0;
 
-out:
-	of_node_put(prev);
-	return error;
+	return 0;
 }
 
