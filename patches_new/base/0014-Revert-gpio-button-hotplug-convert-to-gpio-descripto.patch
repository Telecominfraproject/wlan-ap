-			bdata->gpiod = devm_gpiod_get_index(dev, desc, i,
-							    GPIOD_IN);
-			if (IS_ERR(bdata->gpiod)) {
-				/* or the legacy (button->gpio is good) way? */
-				error = devm_gpio_request_one(dev,
-					button->gpio, GPIOF_IN | (
-					button->active_low ? GPIOF_ACTIVE_LOW :
-					0), desc);
